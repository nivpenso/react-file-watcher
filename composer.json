{
    "name": "nivpenso/react-file-watcher",
    "description": "a file watcher package based on reactphp",
    "type": "library",
    "autoload": {
        "psr-4": {
            "ReactFileWatcher\\": "src/"
        }
    },
    "require": {
        "react/event-loop": "^1.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Niv Penso",
            "email": "nivpenso@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9",
        "pestphp/pest": "^1.0",
        "ext-uv": "*",
        "ext-ev": "*",
        "ext-libevent": "*",
        "ext-event": "*"
    },
    "archive": {
        "exclude": ["demo", ".circleci", "tests", ".gitignore", "Dockerfile", "phpunit.xml"]
    }
}
